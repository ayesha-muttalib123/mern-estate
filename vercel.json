{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "env": {
    "MONGO_URI": "@env:MONGO_URI",
    "SECRET_KEY": "@env:SECRET_KEY",
    "VITE_FIREBASE_API_KEY": "@env:VITE_FIREBASE_API_KEY"
  }
}
